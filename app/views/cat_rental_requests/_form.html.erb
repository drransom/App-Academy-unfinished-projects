<% form_action = if cat_rental_request.persisted? %>
  <% cat_rental_request_url(cat_rental_request) %>
<% else %>
  <% cat_rental_requests_url %>
<% end %>

<form action="<%= form_action %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <% if cat_rental_request.persisted? %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <label for="cat_id">Choose Cat</label>
  <select name="cat_rental_request[cat_id]">
    <option></option>
    <% cats.each do |cat| %>
      <option value="<%= cat.id %>" <%= "selected" if cat_rental_request.cat_id == cat.id %>><%= cat.name %></option>
    <% end %>
  </select>
  <label for="start_date">Requested Start Date
    <input name="cat_rental_request[start_date]" id="start_date" type="date" value="<%= cat_rental_request.start_date %>">
  </label>
  <br>
  <label for="end_date">Requested End Date
    <input name="cat_rental_request[end_date]" id="end_date" type="date" value="<%= cat_rental_request.end_date %>">
  </label>
  <br>
  <input type="submit" value="Submit my Cat Rental Request!">
</form>
