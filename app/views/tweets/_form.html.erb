<h2>New Tweet!</h2>
<form class="tweet-compose" action="/tweets" method="POST">
  <input
      type="hidden"
      name="authenticity_token"
      value="<%= form_authenticity_token %>">

  <label>
    Content
    <textarea name="tweet[content]"></textarea>
  </label>
  <strong class="chars-left">140 characters remaining.</strong>
  <br>

  <label>
    <a href="javascript:void(0)" class="add-mention-user">Mention User</a>

      <div class="mentioned-users">
      </div>
    <script type="text/template">
        <div>
        Mention
        <a href="javascript:void(0)" class="remove-mentioned-user">Remove</a>
        <select name="tweet[mentioned_user_ids][]">
          <option></option>
          <% User.all.each do |user| %>
            <option value="<%= user.id %>"><%= user.username %></option>
          <% end %>
        </select>
      </div>
    </script>
  </label>
  <br><br>

  <input class="tweet-button" type="Submit" value="Post Tweet!">
</form>
